<div class="container">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <form id="new-movie-form">
                <div class="mb-3">
                    <input type="text" class="form-control" id="movie-title" placeholder="Enter your movie title!">
                </div>

                <button type="submit" class="btn btn-primary">Add Movie to Watch List</button>
            </form>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("#new-movie-form").on("submit", function (e) {
            e.preventDefault();

            const movieTitle = $("#movie-title").val();

            $.ajax("/api/movies", {
                type: "POST", data: {
                    movie: movieTitle
                }
            }).then(response => {
                alert("Movie successfully added!");
                window.location.href = "/";
            })
        })
    })
</script>